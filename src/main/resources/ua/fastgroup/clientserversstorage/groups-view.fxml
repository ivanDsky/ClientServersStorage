<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ua.fastgroup.clientserversstorage.controllers.GroupsController">
   <center>
      <TableView fx:id="groupTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <left>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="160.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="labelGroupName">
               <VBox.margin>
                  <Insets bottom="8.0" left="16.0" right="16.0" top="16.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="labelDescription">
               <VBox.margin>
                  <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="addGroup" mnemonicParsing="false" onAction="#onAdd" text="Add">
               <VBox.margin>
                  <Insets top="24.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="updateGroup" mnemonicParsing="false" onAction="#onUpdate" text="Update">
               <VBox.margin>
                  <Insets top="16.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="deleteGroup" mnemonicParsing="false" onAction="#onDelete" text="Delete group">
               <VBox.margin>
                  <Insets top="16.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="deleteAll" mnemonicParsing="false" onAction="#onDeleteAll" text="Delete all">
               <VBox.margin>
                  <Insets top="16.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="getPriceGroup" mnemonicParsing="false" onAction="#onGetPrice" text="Get price of group">
               <VBox.margin>
                  <Insets top="16.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="getAllProducts" mnemonicParsing="false"  onAction="#onGetAllProducts" text="Get all products">
               <VBox.margin>
                  <Insets top="16.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="getAllProductsGroup" mnemonicParsing="false"  onAction="#onGetAllProductsGroup" text="Get products from group">
               <VBox.margin>
                  <Insets top="16.0" />
               </VBox.margin>
            </Button>
         </children></VBox>
   </left>
</BorderPane>
